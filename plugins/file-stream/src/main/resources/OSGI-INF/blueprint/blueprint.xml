<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://www.pentaho.com/xml/schemas/pentaho-blueprint http://www.pentaho.com/xml/schemas/pentaho-blueprint.xsd">

    <bean id="FileStreamMeta" class="org.pentaho.di.trans.step.filestream.FileStreamMeta" scope="prototype"/>
    <bean id="FileStreamPlugin" class="org.pentaho.di.osgi.OSGIPlugin" scope="prototype">
        <property name="mainType" value="org.pentaho.di.trans.step.StepMetaInterface"/>
        <property name="name" value="File Stream"/>
        <property name="ID" value="FileStream"/>
        <property name="imageFile" value="FileStream.svg"/>
        <property name="description" value="Streams lines from a file as they are added.  aka tail -f"/>
        <property name="pluginTypeInterface" value="org.pentaho.di.core.plugins.StepPluginType"/>
        <property name="category" value="Streaming"/>
        <property name="classToBeanMap">
            <map>
                <entry key="org.pentaho.di.trans.step.StepMetaInterface" value="FileStreamMeta"/>
            </map>
        </property>
    </bean>
    <service id="FileStreamPluginService" interface="org.pentaho.di.core.plugins.PluginInterface" ref="FileStreamPlugin">
        <service-properties>
            <entry key="PluginType" value="org.pentaho.di.core.plugins.StepPluginType"/>
        </service-properties>
    </service>
  <!--<bean id="FileStreamData" class="org.pentaho.di.trans.step.filestream.FileStreamData" scope="prototype"/>

  <bean id="FileStreamBean" class="org.pentaho.di.trans.step.filestream.FileStreamMeta" scope="prototype">
    <pen:di-plugin type="org.pentaho.di.core.plugins.StepPluginType">
    	<pen:di-plugin-mapping class="org.pentaho.di.trans.step.StepDataInterface" ref="FileStreamData"/>
    </pen:di-plugin>
  </bean>-->

</blueprint>
